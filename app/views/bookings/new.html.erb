<div class="container my-5">
  <div class="form p-5 m-3 bg-white">
    <% if ((@trip.bookings.count + 1) < @trip.capacity)%>
      <h1 class="text-center mb-5">Thank you for choosing this trip!</h1>

      <%= simple_form_for [@trip, @booking ] do |f| %>
          <%= f.input :description, label: "Please tell us why you want to join this trip" %>
          <%= f.submit "Submit your application", class: "btn btn-travel mt-3" %>
        <% end %>
        <hr>
        <%= link_to 'Back', trips_path, class: "btn-travel-secondary" %>
    <% else %>
      <p> Sorry this trip is already full !</p>
      <%= link_to 'Back to all trips', trips_path, class: "btn-travel mt-3" %>
    <% end %>
  </div>
</div>
