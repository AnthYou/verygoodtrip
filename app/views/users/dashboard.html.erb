<div class = "container mt-3">

  <div class="bg-white p-4 rounded mb-3 text-center">
    <h1 class="text-center mb-3"><strong>Dashboard</strong></h1>
    <% if @user.photo.attached? %>
      <p> <%= cl_image_tag @user.photo.key, class: "avatar-dashboard" %> </p>
    <% else %>
      <p> <%= image_tag "https://icon-library.com/images/default-user-icon/default-user-icon-8.jpg", class: "avatar-dashboard" %> </p>
    <% end %>
    <h3>Welcome <strong><%= @user.first_name %> <%= @user.last_name %></strong></h3>
    <%= link_to "My profile", user_path(current_user), class: "btn btn-travel mt-3"%>
    <%= link_to "Edit my profile", edit_user_registration_path(current_user), class: "btn btn-travel-secondary mt-3"%>
  </div>

  <!--   My trips -->
  <div class="bg-white p-4 rounded mb-3">
    <h2 class="text-center mb-3">My <strong>created trips</strong> ✈️</h2>
    <% if @trips_admin == [] %>
      <p class="text-center">You haven't created a trip yet</p>
    <% else %>
      <%= render 'layouts/tripcards_admin' %>
    <% end %>
  </div>

  <!--   My Applications -->
  <div class="bg-white p-4 rounded mb-3">
    <h2 class="text-center mb-3">My <strong>applications</strong> 🔔</h2>
    <% if @user.trips == [] %>
      <p class="text-center">You haven't applied to a trip yet</p>
    <% else %>
      <%= render 'layouts/tripcards_user' %>
    <% end %>
  </div>

</div>
