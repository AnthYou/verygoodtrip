<div class = "container mt-3">

  <div class="bg-white p-4 rounded mb-3 text-center">
    <h1 class="text-center mb-5"><strong>Dashboard</strong></h1>
      <div class="applications mt-5 mb-5">
        <hr>
        <!--   My trips -->
        <h2 class="text-center">My <strong>trips</strong> ✈️</h2>
        <% if @trips_admin == [] %>
          <p class="text-center">You haven't created a trip yet</p>
        <% else %>
          <%= render 'layouts/tripcards_admin' %>
        <% end  %>
        <hr>
        <!--   My Applications -->
        <h2 class="text-center">My <strong>applications</strong> 🔔</h2>
        <% if @user.trips == [] %>
          <p class="text-center">You haven't applied to a trip yet</p>
        <% else %>
          <%= render 'layouts/tripcards_user' %>
        <% end %>
      </div>
  </div>
</div>
