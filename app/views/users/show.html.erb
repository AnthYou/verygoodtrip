<div class = "container mt-3">
  <div class="bg-white p-4 rounded mb-3 text-center">
    <p> <%= cl_image_tag @user.photo.key, class: "avatar-dashboard" %> </p>
    <h3><%= @user.first_name %> <%= @user.last_name %></h3>
    <p> <%= ((Date.today - @user.birth_date) / 365).to_i %> years old </p>
    <p> <%= @user.description %> </p>
    <a href="#"> <i class="fab fa-instagram"></i> Follow me on instagram</a>
  </div>

  <div class="bg-white p-4 rounded">
    <h3 class= "text-center mb-3"> The places I have been to 🌎 </h3>
    <img src="https://www.free-largeimages.com/wp-content/uploads/2014/11/Google_world_map-9.png" width=100% height=100% alt="" style="text-align: center">
  </div>


  <div class="bg-white p-4 rounded">
    <h3 class= "text-center"> My trips ✈️ </h3>
    <div class="cards">
      <div class="row">
        <% @user.bookings.each do |booking| %>
          <% if booking.accepted == true %>
            <div class="col-12 col-lg-6 p-3">
              <%= render 'layouts/tripcard', trip: booking.trip  %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
