  <h1 class="text-center mb-5">Find the trip of your dreams ğŸ¤©</h1>
  <!-- SEARCHBAR -->
  <%= form_tag trips_path, class: 'mb-5', method: :get do %>
    <div class="d-flex align-items-center">
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        style: 'border-radius: 20px;',
        placeholder: "Type a destination..."
      %>
      <%= submit_tag "Search", class: "btn btn-travel ml-2" %>
    </div>
  <% end %>
  <!-- the list of movies -->
  <%= render 'layouts/tripcards' %>

  <hr>
  <div class="new-destination text-center mt-5 mb-5">
    <h2>Your perfect trip does not exist? Create it! ğŸ’ª</h2>
    <%= link_to 'Add new destination', new_trip_path(@trip), class: 'btn btn-travel mt-3' %>
  </div>
</div>
